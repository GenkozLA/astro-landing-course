---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-5">Projects</h2>

{
    projects.map((project) => (
        <div class="flex flex-col mb-2 text-center md:text-left md:flex-row">
            <div class="flex-1 p-4">
                <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                <p class="my-2">{project.description}</p>
                <button class="bg-indigo-500 hover:bg-indigo-400 px-3 py-2 rounded-xl">More info</button>
            </div>
            <div class="flex-1">
                <img class="w-72 m-auto" src={project.images} alt="asd" />
            </div>
        </div>
    ))
}
